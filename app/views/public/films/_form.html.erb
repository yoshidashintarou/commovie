<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6", style="margin: 100px">
      <%= form_with model:[@film.comments.new], url: public_film_comments_path(@film.id),  method: :post do |f| %>
      <%= f.text_area :comment, placeholder: "コメントをここに",class:"w-100 " %>
       <div style="margin: 30px">
        <%= f.submit "送信",class:"w-100" %>
      <% end %>
    </div>
  </div>
</div>

