<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-4">
      <h1>編集画面</h1>
      <%= form_with model: @user, url: public_user_path(current_user), method: :patch do |f| %>
      <h4>プロフィール画像</h4>
       <%= f.file_field :image, accept: "image/*",class:"w-100"%>
      <h4>氏名</h4>
        <%= f.text_field :name,class:"w-100" %>
      <h4>メールアドレス</h4>
        <%= f.text_field :email,class:"w-100" %>
        <br><br>
        <%= f.submit '更新する',class:"w-75 btn btn-primary" %>
      <% end %>
     </div>
  </div>
</div>